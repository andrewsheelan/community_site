<%- if devise_mapping.omniauthable? %>
  <div class="mb-6 text-center">
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "w-full mb-2 py-2 px-4 bg-amber-100 hover:bg-amber-200 rounded border border-amber-300 shadow-sm transition-colors text-amber-900 font-medium", data: { turbo: false } %>
    <% end %>
    <div class="my-4 flex items-center justify-center">
      <div class="border-t border-amber-200 flex-grow"></div>
      <span class="px-4 text-amber-700 text-sm">or</span>
      <div class="border-t border-amber-200 flex-grow"></div>
    </div>
  </div>
<% end %>

<h2 class="text-2xl font-bold mb-6 text-amber-900 text-center font-serif">Sign in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
  <div class="field">
    <%= f.label :email, class: "block text-sm font-medium text-amber-900 mb-1" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", 
        class: "w-full px-3 py-2 bg-amber-50/50 border border-amber-200 rounded-md focus:ring-2 focus:ring-amber-500 focus:border-amber-500 shadow-sm" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "block text-sm font-medium text-amber-900 mb-1" %>
    <%= f.password_field :password, autocomplete: "current-password",
        class: "w-full px-3 py-2 bg-amber-50/50 border border-amber-200 rounded-md focus:ring-2 focus:ring-amber-500 focus:border-amber-500 shadow-sm" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field flex items-center">
      <%= f.check_box :remember_me, class: "h-4 w-4 text-amber-600 focus:ring-amber-500 border-amber-300 rounded" %>
      <%= f.label :remember_me, class: "ml-2 block text-sm text-amber-900" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Sign in", class: "w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-amber-600 hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors" %>
  </div>
<% end %>

<div class="mt-6 space-y-2">
  <%= render "devise/shared/links" %>
</div>
