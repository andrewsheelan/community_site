          <svg class="h-6 w-6" data-nav-target="menuIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="hidden h-6 w-6" data-nav-target="closeIcon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile menu -->
  <div class="hidden sm:hidden" data-nav-target="menu">
    <div class="pt-2 pb-3 space-y-1">
      <% if user_signed_in? %>
        <%= link_to "Community", community_path, class: "block px-3 py-2 text-base font-medium text-amber-700 hover:text-amber-800 hover:bg-amber-100" %>
        <%= link_to "Posts", posts_path, class: "block px-3 py-2 text-base font-medium text-amber-700 hover:text-amber-800 hover:bg-amber-100" %>
        <%= link_to "Events", events_path, class: "block px-3 py-2 text-base font-medium text-amber-700 hover:text-amber-800 hover:bg-amber-100" %>
      <% end %>
    </div>
    
    <div class="pt-4 pb-3 border-t border-amber-200/50">
      <% if user_signed_in? %>
        <div class="flex items-center px-4">
          <div class="flex-shrink-0">
            <div class="w-10 h-10 rounded-full bg-amber-200 flex items-center justify-center">
              <span class="text-amber-800 font-semibold"><%= current_user.email[0].upcase %></span>
            </div>
          </div>
          <div class="ml-3">
            <div class="text-base font-medium text-amber-800"><%= current_user.email %></div>
          </div>
        </div>
        <div class="mt-3 space-y-1">
          <%= button_to "Sign Out", destroy_user_session_path, method: :delete,
              class: "block w-full text-left px-4 py-2 text-base font-medium text-amber-700 hover:text-amber-800 hover:bg-amber-100" %>
        </div>
      <% else %>
        <div class="space-y-1">
          <%= link_to "Sign In", new_user_session_path, class: "block px-4 py-2 text-base font-medium text-amber-700 hover:text-amber-800 hover:bg-amber-100" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "block px-4 py-2 text-base font-medium text-amber-700 hover:text-amber-800 hover:bg-amber-100" %>
        </div>
      <% end %>
    </div>
  </div>
