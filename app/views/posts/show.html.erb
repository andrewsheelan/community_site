<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="paper-texture bg-amber-50/90 rounded-lg shadow-md">
    <div class="p-8">
      <!-- Post Header -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-amber-900 mb-4"><%= @post.title %></h1>
        
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-3">
            <div class="w-10 h-10 rounded-full bg-amber-200 flex items-center justify-center">
              <span class="text-amber-800 font-semibold">
                <%= @post.author_name[0].upcase %>
              </span>
            </div>
            <div>
              <div class="text-amber-900 font-medium"><%= @post.author_name %></div>
              <div class="text-sm text-amber-600">
                <%= time_ago_in_words(@post.created_at) %> ago â€¢ <%= @post.reading_time %>
              </div>
            </div>
          </div>

          <% if @post.user == current_user %>
            <div class="flex items-center space-x-4">
              <%= link_to edit_post_path(@post), class: "text-amber-600 hover:text-amber-700" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                </svg>
              <% end %>
              
              <%= button_to post_path(@post), method: :delete, 
                  class: "text-amber-600 hover:text-amber-700",
                  data: { turbo_confirm: "Are you sure you want to delete this post?" } do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Post Content -->
      <div class="prose prose-amber max-w-none">
        <%= @post.content %>
      </div>
    </div>
  </div>

  <!-- Back Link -->
  <div class="mt-8">
    <%= link_to posts_path, class: "text-amber-600 hover:text-amber-700 flex items-center space-x-2" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      <span>Back to Posts</span>
    <% end %>
  </div>
</div>
